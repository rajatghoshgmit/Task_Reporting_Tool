<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
	<style>
		.topheader{
			width:97%;
			height:115px;
			border-top: 7px solid #80ccff;
			border-bottom: 5px solid  #94b8b8;
			border-radius: 15px 50px;
			background-color:#ffffff;
			top:5px;
			left:15px;
			font-weight:600;
			padding: 15px 20px 20px 15px;
			font-size:62px;
			font-family: Courier;
			color: #5bc0de;
			text-align:center;
			position:relative;
		}
		.toptext {
			font-size:20px;
			font-family:Arial, Helvetica, sans-serif;
			color:#404040;
			float:left;
			margin-top:5px;
			margin-left:10px;
		}
		.bluetext{
			color:#4da6ff;
			margin-left:5px;
		}
		.img{
			width:60px;
			height:60px;
			border-radius:55px;
			border:2px solid #cccccc;
			float:right;
			padding:5px;
			margin-top:5px;
			margin-right:10px;
		}
		.img:hover{
			background-color:#33bbff;
			border:none;
		}
		.maincontainer{
			width:80%;
			min-height:700px;
			position: absolute;
			border: 2px solid;	
			margin-top:100px;
			margin-left:150px;
			border:2px solid #cccccc;
			margin-bottom:20px;
		}
		.leftcontainer{
			width:30%;
			float:left;
			min-height:700px;
			padding:0px;
			position:relative;
		}
		.menutitle{
			width:100%;
			height:70px;
			border-bottom:2px solid #ffffff;
			background:#33bbff;
			color:#ffffff;
			font-size:31px;
			text-align:center;
			font-family: Verdana, Geneva, sans-serif;
			padding-top:15px;
			font-weight:800;
		}
        .rightcontainer {
        width: 70%;
        float: left;
        min-height: 700px;
        position: relative;
        border-left: 1px solid #cccccc;
    }
	</style>
</head>
<body>
	<div class="topheader">
		<div class="toptext">Welcome <span class="bluetext">@Session["Name"]</span></div>Task Reporting Tool
		<a href="~/Login/Logout"><img src="~/image/logout_black.png" class="img" title="LogOut" /></a>
	</div>
	<div class="maincontainer">
		@RenderBody()
	</div>
</body>
</html>
