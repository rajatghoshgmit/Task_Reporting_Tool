

@{
	Layout = null;
}

<!DOCTYPE html>

<html>

<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
	<title>LoginPage</title>
	<style>
	body{
	margin:0px;
	}
	.input-div .input-cell{
	padding-left:55px;
	width:100%;
	height:40px;
	font-size:24px;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	border-radius:8px;
	border:none;
	background:#f2f2f2;
	font-weight:100;
	}
	.input-div{
	position:relative;
	margin-top:25px;
	}
	.input-div i{
	position:absolute;
	left:10px;
	font-size:28px;
	padding:5px;
	color:#bfbfbf;
	}
	.input-div .input-cell:focus + i{
	color:#80aaff;
	}
	.input-cell:focus{
	 border:2px solid #80aaff;
	 outline:none;
	 }
	 .logindiv {
		 font-size:24px;
		 font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
		 width:50%;
		 min-height:300px;
		 position:absolute;
		 border:2px solid #cccccc;
		 margin-left:50%;
		 transform:translateX(-50%) ;
		 padding:60px 50px;
		 margin-top:120px;
		box-shadow: 0px 0px 56px -21px rgba(0,0,0,0.75);
		border-radius:8px;
	 }
	 a {
		 text-decoration:none;
		 font-family:inherit;
		 color:inherit;
	 }
	 a:hover{
		 text-decoration:none;
		 font-family:inherit;
		 color:inherit;
	 }
	 .title{
		font-family: Courier;
		color: #5bc0de;
		font-weight:800;
		text-align:center;
		font-size:46px;
		margin-bottom:20px;
	 }
	</style>
</head>
<body>
	<div class="logindiv">
		<div class="title" title="Task Reporting Tool">Task Reporting Tool</div>
		<form action="~/Login/Verify" method="post">

			<div class="input-div"> <input type="text" placeholder="Username" class="input-cell" required="required" name="username" autocomplete="off" /><i class="fa fa-user" aria-hidden="true"></i></div>

			<div class="input-div"> <input type="password" placeholder="Password" class="input-cell" required="required" name="password" autocomplete="off" /><i class="fa fa-key" aria-hidden="true"></i></div>
			<center>
				@if (ViewBag.error != null)
				{
					if (ViewBag.error == "UPW")
					{
						<div class="alert alert-danger" style="margin-top:8px; margin-bottom:8px;">  Username or Password is Incorrect  !    </div>
					}
					else if (ViewBag.error == "Logout")
					{
						<div class="alert alert-success" style="margin-top:8px; margin-bottom:8px;">  Successfully Logout !     </div>
					}

				}
				else
				{
					<br />
				}
				<input type="submit" value="SUBMIT" class="btn btn-block btn-success" style="width:50%; font-size:24px;" />
				<br />
				<a href="">Forgot Password ?</a>
			</center>
		</form>

	</div>
</body>
</html>
